@using System.Configuration
@using System.Data.SqlClient

@{
    ViewBag.Title = "AddEtudPage";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="intro-section" id="home-section">

<div class="slide-1" style="background-image: url('../../MyContent/images/hero_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12">
                <div class="row align-items-center">


                    <div class="col-lg-7 mb-" data-aos="fade-up" data-aos-delay="100" style="margin-left: 30%">

                        <div class="form-box">
                            @using (Html.BeginForm("AddEtud", "Rest2", FormMethod.Post))
                            {


                                <div class="form-group">
                                    <input type="text" name="nom" class="form-control" placeholder="nom">
                                </div>

                                <div class="form-group">
                                    <input type="text" name="prenom" class="form-control" placeholder="prenom">
                                </div>

                                <div class="form-group">
                                    <input type="text" name="email" class="form-control" placeholder="email">
                                </div>

                                <div class="form-group">
                                    <input type="text" name="apoge" class="form-control" placeholder="apoge">
                                </div>

                                <div class="form-group">
                                    <input type="text" name="cne" class="form-control" placeholder="cne">
                                </div>

                                SqlConnection connexion = new SqlConnection();
                                connexion.ConnectionString = ConfigurationManager.ConnectionStrings["DBconnexion"].ToString();
                                connexion.Open();
                                SqlCommand cmd = new SqlCommand("select MasterName from Master", connexion);

                                List<string> allMaster = new List<string>();


                                SqlDataReader dr = cmd.ExecuteReader();
                                while (dr.Read())
                                {
                                    allMaster.Add(dr[0].ToString());
                                }
                                connexion.Close();

                                <div class="form-group">
                                    <select name="master">
                                        @{
                                            foreach (var VARIABLE in allMaster)
                                            {
                                                <option value="@VARIABLE">@VARIABLE</option>
                                            }
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <input type="submit" name="formEtudSem" class="btn btn-primary btn-pill" value="Ajouter">

                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
</div>





