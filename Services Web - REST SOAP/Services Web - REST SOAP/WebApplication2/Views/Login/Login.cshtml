
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

    <div class="intro-section" id="home-section">

        <div class="slide-1" style="background-image: url('../../MyContent/images/hero_1.jpg');" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="row align-items-center">
                            <div class="col-lg-6 mb-4">
                                <h1 data-aos="fade-up" data-aos-delay="100">Gestion des notes du Master</h1>
                                <p style="margin-left: 160px" class="mb-4" data-aos="fade-up" data-aos-delay="200">Bienvenue chers étudiants.</p>
                                <!--<p data-aos="fade-up" data-aos-delay="300"><a href="#" class="btn btn-primary py-3 px-5 btn-pill">Admission Now</a></p>-->

                            </div>

                            <div class="col-lg-5 ml-auto" data-aos="fade-up" data-aos-delay="500">

                                <div class="form-box">
                                    @using (Html.BeginForm("trtLogin", "Login", FormMethod.Post))
                                    {

                                        <h3 class="h4 text-black mb-4">Login</h3>
                                        <p style="color: crimson">@ViewBag.errMsg</p>
                                        <div class="form-group">
                                            <input type="text" name="nApoge" class="form-control" placeholder="nApoge">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="Cne" class="form-control" placeholder="Cne">
                                        </div>

                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary btn-pill" value="Login">
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
